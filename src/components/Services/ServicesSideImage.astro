---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */
import { Icon } from "astro-icon/components";

// components
import ServiceCard from "@components/ServiceCard/ServiceCardSideImage.astro";

// images
import image1 from "@images/house.jpg";
import image2 from "@images/kitchen-remodeling.jpg";
import image3 from "@images/bathroom-renovation.jpg";

interface ServiceItem {
	image: ImageMetadata; // an imported image
	title: string;
	details: string;
	href: string; // link to learn more
}

// data
const serviceData: ServiceItem[] = [
	{
	image: image1,
	title: "Home Additions & Expansions",
	details: `Expand your living space without the hassle of moving with our custom home addition services. 
	We design and build seamless additions including extra bedrooms, sunrooms, family rooms, and second-story 
	expansions that blend perfectly with your existing home's architecture. Our team manages all aspects of 
	construction from foundation and framing to electrical, HVAC, and finishing work. With careful planning 
	and skilled execution, we create additional space that feels like it was always part of your home while 
	minimizing disruption to your daily life.`,
	href: "/services/home-additions/",
	},
	{
	image: image2,
	title: "Kitchen Remodeling",
	details: `Transform your kitchen into the heart of your home with our complete remodeling services. 
	From custom cabinetry and countertop installation to flooring, lighting, and layout redesign, we handle 
	every detail of your kitchen renovation. Our experienced team works with you from initial design through 
	final walkthrough to create a functional, beautiful space that fits your lifestyle and budget. Whether 
	you're looking for a modern update or a complete transformation, we bring craftsmanship and attention 
	to detail to every project.`,
	href: "/services/kitchen-remodeling/",
},
{
	image: image3,
	title: "Bathroom Renovation",
	details: `Upgrade your bathroom with our comprehensive renovation services that combine style and 
	functionality. We specialize in everything from fixture replacement and tile work to complete layout 
	changes and accessibility modifications. Our skilled craftsmen ensure quality installation of vanities, 
	showers, tubs, and flooring while maintaining meticulous attention to plumbing and electrical details. 
	Whether you want a spa-like master bath or a practical family bathroom, we deliver results that enhance 
	your daily routine and add value to your home.`,
	href: "/services/bathroom-renovation/",
},

];
---

<section id="services-side-image" class="overflow-hidden py-12">
	<div class="site-container">
		<div class="mx-auto flex max-w-2xl justify-center text-center">
			<h2 class="h2 relative z-20 mx-4">
				<div class="absolute top-0 left-0 hidden md:block">
					<Icon
						name="stellar/freehand-arrow-curl"
						class="text-primary-500 h-auto w-24 -translate-x-24 translate-y-12 -scale-x-100 -rotate-[45deg]"
						aria-hidden="true"
					/>
				</div>
				Our <span class="text-primary-600">professional</span> construction services
			</h2>
		</div>
		<div class="mt-10 flex flex-col gap-16 md:mt-16 md:gap-24">
			{
				serviceData.map((feature, idx) => (
					<ServiceCard
						title={feature.title}
						details={feature.details}
						image={feature.image}
						imageSide={idx % 2 === 0 ? "right" : "left"}
						href={feature.href}
						idx={idx}
					/>
				))
			}
		</div>
	</div>
</section>