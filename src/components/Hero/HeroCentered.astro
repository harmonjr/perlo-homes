---
/**
 * * Hero with background blobs and side image
 */
import { Icon } from "astro-icon/components";

// components
import Button from "@components/Button/Button.astro";
import VideoButton from "@components/Button/VideoButton.astro";

// utils
import { getLocaleFromUrl } from "@js/localeUtils";
const currLocale = getLocaleFromUrl(Astro.url);
---

<section id="hero" class="relative mb-14 flex w-full overflow-hidden pb-10">
	<!-- bottom left blob -->
	<Icon
		name="stellar/blob-1"
		class="text-primary-200/50 absolute top-0 left-0 -z-10 h-[200%] w-[150%] -translate-x-[50%] rotate-12"
		aria-hidden="true"
	/>

	<!-- top left blob -->
	<Icon
		name="stellar/blob-2"
		class="text-primary-400/50 absolute top-0 left-0 -z-10 h-[200%] w-[150%] -translate-x-[50%] -translate-y-[50%] rotate-12"
		aria-hidden="true"
	/>

	<!-- bottom right blob -->
	<Icon
		name="stellar/blob-2"
		class="text-primary-400/50 absolute top-0 left-0 -z-10 h-[200%] w-[150%] translate-x-[20%]"
		aria-hidden="true"
	/>

	<!-- hero items -->
	<div class="site-container pt-40 pb-10 text-center md:pb-20 lg:pt-48 lg:pb-36">
		<!-- Hero text -->
		<div class="mx-auto max-w-[800px]">
			<h1
				class="text-4xl leading-tight font-medium md:text-5xl md:leading-tight"
				data-aos="fade-up"
			>
				Quality work you deserve from the people you
				<span class="relative whitespace-nowrap">
					trust.
					<span>
						<Icon
							name="stellar/freehand-zig-underline"
							class="text-primary-300 absolute top-0 left-0 -z-10 h-full w-full translate-y-1/2"
							aria-hidden="true"
						/>
					</span>
				</span>
			</h1>
			<p class="description mt-6" data-aos="fade-up" data-aos-delay=".2">
				Hero description
			</p>
			<div class="mt-6 flex flex-wrap justify-center gap-4">
				<Button
					variant="primary"
					href="https://cosmicthemes.com/themes/stellar/"
					target="_blank"
					class=""
					rel="noopener noreferrer"
					data-aos="fade-up"
					data-aos-delay=".9"
				>
					Get Stellar
				</Button>
				<VideoButton data-aos="fade-up" data-aos-delay="1.1" />
			</div>
		</div>
	</div>
</section>